{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "production,desktop",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/noaMaker.exe"
      ]
    },
    {
      "label": "build debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "production,desktop,debug",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/noaMaker.exe"
      ]
    },
    {
      "label": "build dev",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "dev",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/noaMaker.exe"
      ],
      "dependsOn": ["npm run build"]
    },
    {
      "label": "wails generate",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "command": "wails",
      "args": [
        "generate",
        "module",
      ],
    },
    {
      "label": "npm install",
      "type": "npm",
      "script": "install",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": [],
    },
    {
      "label": "npm run build",
      "type": "npm",
      "script": "build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "clear": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": [],
      "dependsOn": ["wails generate"]
    },
    {
      "label": "dlv server start",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "dlv",
      "args": [
        "--headless=true",
        "--listen=:2345",
        "--api-version=2",
        "exec",
        "${workspaceFolder}/build/bin/noaMaker.exe"
      ],
      "isBackground": true
    },
  ]
}
  